  <!--  <logger name="com.cjc.dev" level="error"/>-->

  <root level="info">
    <appender-ref ref="CONSOLE_APPENDER"/>
  </root>

  <!--系统操作日志-->
  <root level="info">
    <appender-ref ref="file_info"/>
  </root>

  <root level="error">
